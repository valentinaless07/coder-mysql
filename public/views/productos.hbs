<div class="d-flex justify-content-center flex-column align-items-center w-100 mt-5 p-3 bg-primary bg-gradient shadow-sm">
    <h1 class="text-white">Productos</h1>
    {{#if product}}
    <div class="d-flex justify-content-center w-100">
        <table class="w-75 mt-3">
            <tr class="text-white">
                <th class="pl-3 pb-1">Nombre</th>
                <th class="pl-3">Precio</th>
                <th class="pl-3 d-flex justify-content-center">Foto</th>
            </tr>
            {{#each product}}
            <tr class="border border-4 border-light text-white rounded">
                <td class="p-3">{{this.title}}</td>
                <td class="p-3">${{this.price}}</td>
                <td class="p-3 d-flex justify-content-center"><img class="w-50 h-75 p-3" src="{{this.thumbnail}}" alt=""></td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3>No hay productos</h3>
    {{/if}}
</div>